<!doctype html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript" src="/javascripts/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="/javascripts/ajax.js"></script>
    <title>Produtos</title>
    <script>
      function del(id) {
        if (!id || id <= 0) {
          return;
        }
        if (confirm('Deseja realmente excluir?')) {
          window.location = '/produto/'+id+'/remove';
        }
      }
    </script>
  </head>
  <body>
    <div class="header">
      <div id="headline">
        <a id="linkHome" href="/">Home</a>
        <a id="linkProdutos" href="/produto">Produtos</a>
        <a id="linkMaterias" href="/materiaPrima">Mat√©rias Primas</a>
    </div>
  </div>

    <div class="container">
      <div class="div_cadastrar">
        <a id="linkCad" href="/produto/add">Cadastrar produto</a>
      </div>

      <div class="div_tabela">
    <table id="tabs">
      <tr>
        <td id="active">info</td>
        <td id="active">Id</td>
        <td id="active">Nome</td>
      </tr>
    <%
      for (var index in produtos) {%>
        <tr>
          <td><a href="/produto/<%=produtos[index].id%>/info">show</a></td>
          <td><%=produtos[index].id%></td>
          <td><%=produtos[index].name%></td>
          <td><a href="/produto/<%=produtos[index].id%>/edit">edit</a></td>
          <td><a href="javascript:void(0)" onclick="del(<%=produtos[index].id%>)">delete</td>
        </tr> 
      <%}%>
    </table>
  </div>
    </div>
  </body>
</html>