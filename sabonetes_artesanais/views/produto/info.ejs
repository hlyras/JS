<!doctype html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript" src="/javascripts/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="/javascripts/ajax.js"></script>
    <title>Produtos</title>
  </head>
  <body>
    <div class="header">
      <div id="headline">
        <a id="linkHome" href="/">Home</a>
        <a id="linkProdutos" href="/produto">Produtos</a>
        <a id="linkMaterias" href="/materiaPrima">Matérias Primas</a>
    </div>
  </div>
  <div class="container">
    <div class="div_tabela">
      <table id="tabs">
        <tr>
          <td id="active">Id</td>
          <td id="active">Nome</td>
          <td id="active">descrição</td>
        </tr>
        <tr>
          <td><%=produto[0].id%></td>
          <td><%=produto[0].name%></td>
          <td><%=produto[0].descricao%></td>
          <td id="active"><a class="materiasProduto" href="#" data-status="/produto/<%=produto[0].id%>/materias">Materias Primas</a></td>
        </tr>
    </table>
    </div>
      <div class="div_mat_add">
        <table id="mat_add_table">
          <tr>
            <td id="active">Id</td>
            <td id="active">Nome</td>
          </tr>
          <% for(var index in mats) {%>
            <tr>
              <td><%= mats[index].id%></td>
              <td><%= mats[index].name%></td>
              <td><a class="addMat" href="#" data-status="/produto/<%=produto[0].id%>/<%=mats[index].id%>/addMateria">Incluir</a></td>
            </tr>
          <%}%>
        </table>
      </div>
    </div>
  </body>
</html>